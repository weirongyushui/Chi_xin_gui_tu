.container {
    padding: 0;
    background: #f5f5f5;
    min-height: 100vh;
  }
  
  /* 搜索栏 */
  .search-section {
    background: white;
    padding: 30rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  }
  
  .search-bar {
    display: flex;
    align-items: center;
    background: #f8f9fa;
    border-radius: 50rpx;
    padding: 20rpx 30rpx;
  }
  
  .search-icon {
    font-size: 32rpx;
    color: #999;
    margin-right: 20rpx;
  }
  
  .search-input {
    flex: 1;
    font-size: 28rpx;
    color: #333;
  }
  
  .search-btn {
    padding: 12rpx 24rpx;
    background: #dc143c;
    color: white;
    border-radius: 20rpx;
    font-size: 24rpx;
    margin-left: 20rpx;
  }
  
  /* 筛选栏 */
  .filter-section {
    background: white;
    padding: 20rpx 0;
    border-bottom: 2rpx solid #f0f0f0;
  }
  
  .filter-scroll {
    padding: 0 30rpx;
    white-space: nowrap;
    margin-bottom: 20rpx;
  }
  
  .filter-item {
    display: inline-block;
    padding: 16rpx 32rpx;
    margin-right: 20rpx;
    background: #f8f9fa;
    border-radius: 50rpx;
    font-size: 26rpx;
    color: #666;
    white-space: nowrap;
    transition: all 0.3s ease;
  }
  
  .filter-item.active {
    background: #dc143c;
    color: white;
  }
  
  .sort-section {
    padding: 0 30rpx;
    display: flex;
    align-items: center;
    justify-content: flex-end;
  }
  
  .sort-label {
    font-size: 26rpx;
    color: #666;
    margin-right: 16rpx;
  }
  
  .sort-picker {
    display: flex;
    align-items: center;
    font-size: 26rpx;
    color: #333;
  }
  
  .sort-arrow {
    margin-left: 8rpx;
    font-size: 20rpx;
    color: #999;
  }
  
  /* 基地容器 */
  .bases-container {
    flex: 1;
    padding: 30rpx;
  }
  
  /* 加载和空状态 */
  .loading-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 100rpx 40rpx;
  }
  
  .loading-text {
    margin-top: 30rpx;
    font-size: 28rpx;
    color: #999;
  }
  
  .empty-section {
    text-align: center;
    padding: 120rpx 40rpx;
  }
  
  .empty-icon {
    font-size: 120rpx;
    margin-bottom: 40rpx;
    opacity: 0.3;
  }
  
  .empty-text {
    font-size: 28rpx;
    color: #999;
    margin-bottom: 40rpx;
  }
  
  .empty-actions {
    display: flex;
    justify-content: center;
  }
  
  /* 列表头部 */
  .list-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30rpx;
    padding: 0 10rpx;
  }
  
  .result-count {
    font-size: 26rpx;
    color: #666;
  }
  
  .view-mode {
    display: flex;
    gap: 12rpx;
  }
  
  .mode-btn {
    width: 60rpx;
    height: 60rpx;
    border-radius: 12rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
    background: #f8f9fa;
    color: #666;
    transition: all 0.3s ease;
  }
  
  .mode-btn.active {
    background: #dc143c;
    color: white;
  }
  
  /* 列表视图 */
  .list-view {
    margin: -15rpx;
  }
  
  .base-item {
    background: white;
    border-radius: 20rpx;
    margin: 15rpx;
    overflow: hidden;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
  }
  
  .base-item:active {
    transform: translateY(-4rpx);
    box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  }
  
  .base-image-container {
    height: 300rpx;
    position: relative;
    overflow: hidden;
  }
  
  .base-image {
    width: 100%;
    height: 100%;
  }
  
  .base-default-image {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #f0f0f0, #e0e0e0);
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .default-icon {
    font-size: 80rpx;
    color: #ccc;
  }
  
  .image-badges {
    position: absolute;
    top: 20rpx;
    right: 20rpx;
  }
  
  .rating-badge {
    background: rgba(0, 0, 0, 0.6);
    color: #FFD700;
    padding: 8rpx 16rpx;
    border-radius: 20rpx;
    font-size: 24rpx;
  }
  
  .base-content {
    padding: 30rpx;
  }
  
  .base-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 20rpx;
  }
  
  .base-name {
    flex: 1;
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    line-height: 1.3;
    margin-right: 20rpx;
  }
  
  .base-province {
    padding: 6rpx 16rpx;
    background: #dc143c;
    color: white;
    font-size: 22rpx;
    border-radius: 12rpx;
    white-space: nowrap;
  }
  
  .base-address {
    display: block;
    font-size: 24rpx;
    color: #666;
    margin-bottom: 16rpx;
    line-height: 1.4;
  }
  
  .base-description {
    display: block;
    font-size: 26rpx;
    color: #666;
    line-height: 1.5;
    margin-bottom: 20rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }
  
  .base-meta {
    display: flex;
    justify-content: space-between;
    margin-bottom: 24rpx;
    padding: 16rpx;
    background: #f8f9fa;
    border-radius: 12rpx;
  }
  
  .visit-count, .ticket-info {
    font-size: 22rpx;
    color: #666;
  }
  
  .base-actions {
    display: flex;
    gap: 20rpx;
  }
  
  .action-btn {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20rpx 16rpx;
    border: 2rpx solid #e0e0e0;
    border-radius: 12rpx;
    background: white;
    transition: all 0.3s ease;
  }
  
  .action-btn.primary {
    border-color: #dc143c;
    background: #dc143c;
    color: white;
  }
  
  .action-btn:active {
    transform: scale(0.95);
  }
  
  .action-icon {
    font-size: 28rpx;
    margin-bottom: 8rpx;
  }
  
  .action-text {
    font-size: 22rpx;
  }
  
  /* 网格视图 */
  .grid-view {
    display: flex;
    flex-wrap: wrap;
    margin: -10rpx;
  }
  
  .grid-item {
    width: calc(50% - 20rpx);
    margin: 10rpx;
    background: white;
    border-radius: 16rpx;
    overflow: hidden;
    box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
  }
  
  .grid-item:active {
    transform: translateY(-4rpx);
    box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.1);
  }
  
  .grid-image-container {
    height: 200rpx;
    position: relative;
    overflow: hidden;
  }
  
  .grid-image {
    width: 100%;
    height: 100%;
  }
  
  .grid-default-image {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #f0f0f0, #e0e0e0);
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .grid-default-icon {
    font-size: 60rpx;
    color: #ccc;
  }
  
  .grid-badges {
    position: absolute;
    top: 12rpx;
    right: 12rpx;
  }
  
  .grid-rating {
    background: rgba(0, 0, 0, 0.6);
    color: #FFD700;
    padding: 6rpx 12rpx;
    border-radius: 16rpx;
    font-size: 20rpx;
  }
  
  .grid-content {
    padding: 24rpx 20rpx;
  }
  
  .grid-name {
    display: block;
    font-size: 28rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 12rpx;
    line-height: 1.3;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  
  .grid-province {
    display: block;
    font-size: 22rpx;
    color: #666;
    margin-bottom: 8rpx;
  }
  
  .grid-visit-count {
    display: block;
    font-size: 20rpx;
    color: #999;
  }
  
  /* 快速定位 */
  .quick-location {
    position: fixed;
    right: 30rpx;
    bottom: 120rpx;
    padding: 20rpx 24rpx;
    background: #dc143c;
    color: white;
    border-radius: 50rpx;
    display: flex;
    align-items: center;
    box-shadow: 0 8rpx 25rpx rgba(220, 20, 60, 0.3);
    z-index: 100;
  }
  
  .location-icon {
    font-size: 24rpx;
    margin-right: 8rpx;
  }
  
  .location-text {
    font-size: 24rpx;
  }