.container {
    padding: 0;
    background: #f5f5f5;
    min-height: 100vh;
  }
  
  /* 用户头部 */
  .user-header {
    background: linear-gradient(135deg, #dc143c, #ff4757);
    padding: 60rpx 30rpx 40rpx;
    display: flex;
    align-items: center;
    color: white;
  }
  
  .user-avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    margin-right: 30rpx;
    overflow: hidden;
    background: rgba(255, 255, 255, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .avatar-image {
    width: 100%;
    height: 100%;
  }
  
  .avatar-placeholder {
    font-size: 60rpx;
    color: rgba(255, 255, 255, 0.8);
  }
  
  .user-info {
    flex: 1;
  }
  
  .user-name {
    display: block;
    font-size: 36rpx;
    font-weight: bold;
    margin-bottom: 12rpx;
  }
  
  .user-location, .user-tips {
    display: block;
    font-size: 24rpx;
    opacity: 0.8;
  }
  
  .user-actions {
    margin-left: 20rpx;
  }
  
  .btn-login {
    padding: 16rpx 32rpx;
    background: rgba(255, 255, 255, 0.2);
    color: white;
    border: 2rpx solid rgba(255, 255, 255, 0.3);
    border-radius: 50rpx;
    font-size: 24rpx;
  }
  
  .user-badges {
    text-align: right;
  }
  
  .badge {
    display: inline-block;
    padding: 8rpx 16rpx;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 20rpx;
    font-size: 20rpx;
    border: 1rpx solid rgba(255, 255, 255, 0.3);
  }
  
  /* 数据统计 */
  .stats-section {
    background: white;
    margin: -20rpx 30rpx 30rpx;
    border-radius: 20rpx;
    padding: 40rpx 30rpx;
    display: flex;
    box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.1);
  }
  
  .stat-item {
    flex: 1;
    text-align: center;
  }
  
  .stat-number {
    display: block;
    font-size: 48rpx;
    font-weight: bold;
    color: #dc143c;
    margin-bottom: 8rpx;
  }
  
  .stat-label {
    display: block;
    font-size: 24rpx;
    color: #666;
  }
  
  .stat-divider {
    width: 2rpx;
    height: 60rpx;
    background: #f0f0f0;
    margin: 0 20rpx;
  }
  
  /* 快捷功能 */
  .quick-functions {
    background: white;
    margin: 0 30rpx 30rpx;
    border-radius: 20rpx;
    padding: 30rpx;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  }
  
  .function-row {
    display: flex;
    margin-bottom: 30rpx;
  }
  
  .function-row:last-child {
    margin-bottom: 0;
  }
  
  .function-item {
    flex: 1;
    display: flex;
    align-items: center;
    padding: 30rpx 20rpx;
    border-radius: 16rpx;
    background: #f8f9fa;
    margin-right: 20rpx;
    transition: all 0.3s ease;
  }
  
  .function-item:last-child {
    margin-right: 0;
  }
  
  .function-item:active {
    background: #e9ecef;
    transform: scale(0.98);
  }
  
  .function-icon {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 20rpx;
    box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
  }
  
  .function-icon .icon {
    font-size: 36rpx;
    color: white;
  }
  
  .function-text {
    flex: 1;
    font-size: 26rpx;
    color: #333;
    font-weight: 500;
  }
  
  .function-arrow {
    font-size: 24rpx;
    color: #999;
  }
  
  /* 服务功能 */
  .service-section {
    background: white;
    margin: 0 30rpx 30rpx;
    border-radius: 20rpx;
    padding: 40rpx 30rpx;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  }
  
  .section-title {
    display: flex;
    align-items: center;
    margin-bottom: 30rpx;
    padding-bottom: 20rpx;
    border-bottom: 2rpx solid #f0f0f0;
  }
  
  .title-icon {
    font-size: 32rpx;
    margin-right: 16rpx;
  }
  
  .title-text {
    flex: 1;
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
  }
  
  .title-action {
    font-size: 24rpx;
    color: #dc143c;
  }
  
  .service-list {
    margin: -12rpx 0;
  }
  
  .service-item {
    display: flex;
    align-items: center;
    padding: 32rpx 0;
    border-bottom: 1rpx solid #f0f0f0;
    transition: all 0.3s ease;
  }
  
  .service-item:last-child {
    border-bottom: none;
  }
  
  .service-item:active {
    background: #f8f9fa;
    margin: 0 -30rpx;
    padding: 32rpx 30rpx;
    border-radius: 12rpx;
  }
  
  .service-info {
    flex: 1;
  }
  
  .service-name {
    display: block;
    font-size: 28rpx;
    color: #333;
    margin-bottom: 8rpx;
    font-weight: 500;
  }
  
  .service-desc {
    display: block;
    font-size: 22rpx;
    color: #999;
  }
  
  .service-arrow {
    font-size: 24rpx;
    color: #ccc;
  }
  
  /* 学习园地 */
  .study-section {
    background: white;
    margin: 0 30rpx 30rpx;
    border-radius: 20rpx;
    padding: 40rpx 30rpx;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  }
  
  .study-cards {
    display: flex;
    flex-direction: column;
    gap: 20rpx;
  }
  
  .study-card {
    padding: 30rpx;
    border-radius: 16rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    color: white;
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
  }
  
  .study-card:active {
    transform: translateY(-2rpx);
    box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.2);
  }
  
  .study-card.red {
    background: linear-gradient(135deg, #ff6b6b, #ee5a24);
  }
  
  .study-card.blue {
    background: linear-gradient(135deg, #74b9ff, #0984e3);
  }
  
  .study-card.green {
    background: linear-gradient(135deg, #26de81, #20bf6b);
  }
  
  .study-content {
    flex: 1;
  }
  
  .study-title {
    display: block;
    font-size: 28rpx;
    font-weight: bold;
    margin-bottom: 8rpx;
  }
  
  .study-subtitle {
    display: block;
    font-size: 22rpx;
    opacity: 0.9;
  }
  
  .study-icon {
    font-size: 40rpx;
    opacity: 0.8;
  }
  
  /* 最近浏览 */
  .recent-section {
    background: white;
    margin: 0 30rpx 30rpx;
    border-radius: 20rpx;
    padding: 40rpx 30rpx;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  }
  
  .recent-scroll {
    white-space: nowrap;
    margin: 0 -15rpx;
  }
  
  .recent-item {
    display: inline-block;
    width: 160rpx;
    margin: 0 15rpx;
    text-align: center;
    vertical-align: top;
    white-space: normal;
  }
  
  .recent-image {
    height: 120rpx;
    border-radius: 12rpx;
    overflow: hidden;
    margin-bottom: 12rpx;
  }
  
  .recent-img {
    width: 100%;
    height: 100%;
  }
  
  .recent-default {
    width: 100%;
    height: 100%;
    background: #f0f0f0;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 50rpx;
    color: #ccc;
  }
  
  .recent-name {
    display: block;
    font-size: 24rpx;
    color: #333;
    margin-bottom: 6rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  
  .recent-province {
    display: block;
    font-size: 20rpx;
    color: #999;
  }
  
  /* 退出登录 */
  .logout-section {
    padding: 0 30rpx 40rpx;
  }
  
  .btn-logout {
    width: 100%;
    padding: 28rpx;
    background: white;
    color: #dc143c;
    border: 2rpx solid #dc143c;
    border-radius: 50rpx;
    font-size: 28rpx;
    transition: all 0.3s ease;
  }
  
  .btn-logout:active {
    background: #dc143c;
    color: white;
  }