.container {
    padding: 0;
    background: linear-gradient(to bottom, #f8f9fa, #ffffff);
  }
  
  /* 头部轮播 */
  .header-banner {
    height: 400rpx;
    margin-bottom: 30rpx;
  }
  
  .banner-item {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    position: relative;
  }
  
  .banner-content {
    text-align: center;
    color: white;
    z-index: 2;
  }
  
  .banner-title {
    display: block;
    font-size: 48rpx;
    font-weight: bold;
    margin-bottom: 16rpx;
    text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
  }
  
  .banner-subtitle {
    display: block;
    font-size: 28rpx;
    opacity: 0.9;
    text-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.3);
  }
  
  /* 位置和搜索 */
  .location-section {
    padding: 0 30rpx 30rpx;
    display: flex;
    gap: 20rpx;
  }
  
  .location-info {
    flex: 1;
    background: white;
    padding: 24rpx 30rpx;
    border-radius: 50rpx;
    display: flex;
    align-items: center;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  }
  
  .location-icon {
    font-size: 32rpx;
    margin-right: 16rpx;
  }
  
  .location-text {
    flex: 1;
    font-size: 28rpx;
    color: #333;
  }
  
  .location-arrow {
    color: #999;
    font-size: 24rpx;
  }
  
  .search-box {
    flex: 2;
    background: white;
    padding: 24rpx 30rpx;
    border-radius: 50rpx;
    display: flex;
    align-items: center;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  }
  
  .search-icon {
    font-size: 32rpx;
    margin-right: 16rpx;
    color: #999;
  }
  
  .search-placeholder {
    color: #999;
    font-size: 28rpx;
  }
  
  /* 快捷功能 */
  .quick-actions {
    padding: 0 30rpx 40rpx;
    display: flex;
    justify-content: space-between;
  }
  
  .action-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1;
  }
  
  .action-icon {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 40rpx;
    margin-bottom: 16rpx;
    box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.1);
  }
  
  .action-text {
    font-size: 24rpx;
    color: #666;
  }
  
  /* 分节样式 */
  .section {
    margin-bottom: 50rpx;
  }
  
  .section-header {
    padding: 0 30rpx 30rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .section-title {
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
  }
  
  .section-more {
    font-size: 24rpx;
    color: #dc143c;
  }
  
  /* 基地卡片 */
  .bases-list {
    padding: 0 30rpx;
  }
  
  .base-card {
    background: white;
    border-radius: 24rpx;
    margin-bottom: 30rpx;
    overflow: hidden;
    box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
  }
  
  .base-card:active {
    transform: translateY(-4rpx);
    box-shadow: 0 12rpx 35rpx rgba(0, 0, 0, 0.12);
  }
  
  .base-image {
    height: 300rpx;
    position: relative;
    overflow: hidden;
  }
  
  .card-image {
    width: 100%;
    height: 100%;
  }
  
  .default-image {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #ddd, #f0f0f0);
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .default-icon {
    font-size: 80rpx;
    opacity: 0.5;
  }
  
  .image-overlay {
    position: absolute;
    top: 20rpx;
    right: 20rpx;
    background: rgba(0, 0, 0, 0.6);
    color: white;
    padding: 8rpx 16rpx;
    border-radius: 20rpx;
    font-size: 24rpx;
  }
  
  .rating {
    color: #FFD700;
  }
  
  .base-info {
    padding: 30rpx;
  }
  
  .base-name {
    display: block;
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 16rpx;
  }
  
  .base-address {
    display: block;
    font-size: 24rpx;
    color: #666;
    margin-bottom: 16rpx;
  }
  
  .base-meta {
    display: flex;
    justify-content: space-between;
    margin-bottom: 16rpx;
  }
  
  .visit-count, .distance {
    font-size: 22rpx;
    color: #999;
  }
  
  .base-desc {
    display: block;
    font-size: 26rpx;
    color: #666;
    line-height: 1.6;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }
  
  /* 热门基地横向滚动 */
  .hot-bases {
    padding-left: 30rpx;
    white-space: nowrap;
  }
  
  .hot-base-card {
    display: inline-block;
    width: 240rpx;
    margin-right: 20rpx;
    background: white;
    border-radius: 20rpx;
    padding: 20rpx;
    box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.05);
    vertical-align: top;
    white-space: normal;
  }
  
  .hot-base-image {
    height: 160rpx;
    border-radius: 16rpx;
    overflow: hidden;
    margin-bottom: 16rpx;
  }
  
  .hot-card-image {
    width: 100%;
    height: 100%;
  }
  
  .hot-default-image {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #ddd, #f0f0f0);
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .hot-default-icon {
    font-size: 60rpx;
    opacity: 0.5;
  }
  
  .hot-base-name {
    display: block;
    font-size: 28rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 8rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  
  .hot-base-city {
    display: block;
    font-size: 22rpx;
    color: #999;
  }
  
  /* 学习卡片 */
  .study-cards {
    padding: 0 30rpx;
    display: flex;
    gap: 20rpx;
  }
  
  .study-card {
    flex: 1;
    padding: 40rpx 30rpx;
    border-radius: 20rpx;
    color: white;
  }
  
  .study-title {
    display: block;
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 12rpx;
  }
  
  .study-subtitle {
    display: block;
    font-size: 24rpx;
    opacity: 0.9;
  }
  
  /* 加载和空状态 */
  .loading {
    padding: 60rpx;
    text-align: center;
  }
  
  .loading-text {
    margin-left: 20rpx;
    color: #999;
  }
  
  .empty-state {
    text-align: center;
    padding: 80rpx 40rpx;
    color: #999;
  }
  
  .empty-icon {
    font-size: 120rpx;
    margin-bottom: 30rpx;
    opacity: 0.5;
  }
  
  .mt-20 {
    margin-top: 20rpx;
  }