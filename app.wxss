/* 全局样式补充 */
page {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
    background-color: #f5f5f5;
    font-size: 28rpx;
    line-height: 1.6;
  }
  
  /* 容器样式 */
  .container {
    min-height: 100vh;
    box-sizing: border-box;
  }
  
  /* 按钮样式 */
  .btn-primary {
    background: linear-gradient(135deg, #dc143c, #ff4757);
    color: white;
    border-radius: 50rpx;
    padding: 24rpx 48rpx;
    font-size: 32rpx;
    border: none;
    box-shadow: 0 8rpx 25rpx rgba(220, 20, 60, 0.3);
    transition: all 0.3s ease;
  }
  
  .btn-primary:active {
    transform: translateY(2rpx);
    box-shadow: 0 4rpx 15rpx rgba(220, 20, 60, 0.3);
  }
  
  .btn-primary.disabled {
    background: #ccc;
    box-shadow: none;
    transform: none;
  }
  
  .btn-secondary {
    background: #ffffff;
    color: #dc143c;
    border: 2rpx solid #dc143c;
    border-radius: 50rpx;
    padding: 22rpx 46rpx;
    font-size: 32rpx;
    transition: all 0.3s ease;
  }
  
  .btn-secondary:active {
    background: #dc143c;
    color: white;
  }
  
  /* 卡片样式 */
  .card {
    background: white;
    border-radius: 24rpx;
    box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.08);
    margin-bottom: 30rpx;
    overflow: hidden;
    transition: all 0.3s ease;
  }
  
  .card:active {
    transform: translateY(-4rpx);
    box-shadow: 0 12rpx 35rpx rgba(0, 0, 0, 0.12);
  }
  
  /* 文字样式 */
  .title {
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 20rpx;
  }
  
  .subtitle {
    font-size: 32rpx;
    font-weight: 600;
    color: #dc143c;
    margin-bottom: 16rpx;
  }
  
  .text-primary {
    color: #dc143c;
  }
  
  .text-secondary {
    color: #666;
    font-size: 28rpx;
  }
  
  .text-muted {
    color: #999;
    font-size: 24rpx;
  }
  
  /* 布局工具类 */
  .flex {
    display: flex;
  }
  
  .flex-column {
    flex-direction: column;
  }
  
  .flex-center {
    justify-content: center;
    align-items: center;
  }
  
  .flex-between {
    justify-content: space-between;
    align-items: center;
  }
  
  .flex-wrap {
    flex-wrap: wrap;
  }
  
  /* 间距工具类 */
  .mb-10 { margin-bottom: 10rpx; }
  .mb-20 { margin-bottom: 20rpx; }
  .mb-30 { margin-bottom: 30rpx; }
  .mb-40 { margin-bottom: 40rpx; }
  
  .mt-10 { margin-top: 10rpx; }
  .mt-20 { margin-top: 20rpx; }
  .mt-30 { margin-top: 30rpx; }
  .mt-40 { margin-top: 40rpx; }
  
  .p-10 { padding: 10rpx; }
  .p-20 { padding: 20rpx; }
  .p-30 { padding: 30rpx; }
  .p-40 { padding: 40rpx; }
  
  /* 图标样式 */
  .icon {
    width: 40rpx;
    height: 40rpx;
    margin-right: 16rpx;
  }
  
  .icon-large {
    width: 60rpx;
    height: 60rpx;
  }
  
  .icon-small {
    width: 32rpx;
    height: 32rpx;
  }
  
  /* 加载动画 */
  .loading {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 60rpx;
  }
  
  .loading-text {
    margin-left: 20rpx;
    color: #999;
  }
  
  /* 空状态 */
  .empty-state {
    text-align: center;
    padding: 100rpx 40rpx;
    color: #999;
  }
  
  .empty-icon {
    width: 120rpx;
    height: 120rpx;
    margin: 0 auto 40rpx;
    opacity: 0.5;
  }
  
  /* 分割线 */
  .divider {
    height: 2rpx;
    background: #f0f0f0;
    margin: 30rpx 0;
  }
  
  .divider-thick {
    height: 20rpx;
    background: #f5f5f5;
    margin: 40rpx -30rpx;
  }
  
  /* 标签样式 */
  .tag {
    display: inline-block;
    padding: 8rpx 16rpx;
    background: #f0f0f0;
    color: #666;
    font-size: 22rpx;
    border-radius: 12rpx;
    margin-right: 12rpx;
    margin-bottom: 12rpx;
  }
  
  .tag-primary {
    background: #dc143c;
    color: white;
  }
  
  .tag-success {
    background: #4CAF50;
    color: white;
  }
  
  .tag-warning {
    background: #FF9800;
    color: white;
  }
  
  .tag-danger {
    background: #F44336;
    color: white;
  }
  
  /* 徽章样式 */
  .badge {
    display: inline-block;
    padding: 4rpx 12rpx;
    background: #dc143c;
    color: white;
    font-size: 20rpx;
    border-radius: 20rpx;
    min-width: 40rpx;
    text-align: center;
    line-height: 1.2;
  }
  
  /* 阴影样式 */
  .shadow-sm {
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  }
  
  .shadow {
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  }
  
  .shadow-lg {
    box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.12);
  }
  
  /* 边框圆角 */
  .rounded-sm { border-radius: 8rpx; }
  .rounded { border-radius: 12rpx; }
  .rounded-lg { border-radius: 20rpx; }
  .rounded-xl { border-radius: 24rpx; }
  .rounded-full { border-radius: 50%; }
  
  /* 文本对齐 */
  .text-left { text-align: left; }
  .text-center { text-align: center; }
  .text-right { text-align: right; }
  
  /* 文本截断 */
  .text-ellipsis {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  
  .text-ellipsis-2 {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }
  
  .text-ellipsis-3 {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
  }
  
  /* 安全区域适配 */
  .safe-area-bottom {
    padding-bottom: env(safe-area-inset-bottom);
  }
  
  .safe-area-top {
    padding-top: env(safe-area-inset-top);
  }
  
  /* 动画类 */
  .fade-in {
    animation: fadeIn 0.3s ease-in;
  }
  
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
  
  .slide-up {
    animation: slideUp 0.3s ease-out;
  }
  
  @keyframes slideUp {
    from {
      transform: translateY(20rpx);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }
  
  /* 响应式 */
  @media (max-width: 750rpx) {
    .container {
      padding: 20rpx;
    }
  }